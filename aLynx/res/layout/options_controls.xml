<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/opt_contrl_button_conf_p"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ButtonVertDP"
        android:layout_marginLeft="@dimen/ButtonHorDP"
        android:layout_marginRight="@dimen/ButtonHorDP"
        android:layout_marginTop="@dimen/ButtonVertDP"
        android:text="Set on-Screen Pad (Portrait)" />

    <Button
        android:id="@+id/opt_contrl_button_conf_l"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ButtonVertDP"
        android:layout_marginLeft="@dimen/ButtonHorDP"
        android:layout_marginRight="@dimen/ButtonHorDP"
        android:layout_marginTop="@dimen/ButtonVertDP"
        android:text="Set on-Screen Pad (Landscape)" />

    <Button
        android:id="@+id/opt_contrl_button_hardkey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ButtonVertDP"
        android:layout_marginLeft="@dimen/ButtonHorDP"
        android:layout_marginRight="@dimen/ButtonHorDP"
        android:layout_marginTop="@dimen/ButtonVertDP"
        android:text="Configure Hardware Keys" />

    <Button
        android:id="@+id/opt_contrl_button_hide"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ButtonVertDP"
        android:layout_marginLeft="@dimen/ButtonHorDP"
        android:layout_marginRight="@dimen/ButtonHorDP"
        android:layout_marginTop="@dimen/ButtonVertDP"
        android:text="Show/Hide on-Screen Buttons" />

    <CheckBox
        android:id="@+id/opt_controls_vibrate_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ButtonVertDP"
        android:layout_marginLeft="@dimen/ButtonHorDP"
        android:layout_marginRight="@dimen/ButtonHorDP"
        android:layout_marginTop="@dimen/ButtonVertDP"
        android:text="Vibrate on Keypress" />

    
</LinearLayout>
</ScrollView>